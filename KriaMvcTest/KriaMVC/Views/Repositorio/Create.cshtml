@model KriaMVC.Models.Repositorio

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:cornflowerblue">Adicionar um repositório</h1>

<h4>Repositório</h4>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group p-2">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-white" style="color:white"></span>
            </div>
            <div class="form-group  p-2">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea rows="4" style="max-height:8em" asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group  p-2">
                <label asp-for="Linguagem" class="control-label"></label>
                <input asp-for="Linguagem" class="form-control" />
                <span asp-validation-for="Linguagem" class="text-danger"></span>
            </div>
            <div class="form-group  p-2">
                <label asp-for="UltimaAtt" class="control-label"></label>
                <input asp-for="UltimaAtt" class="form-control" />
                <span asp-validation-for="UltimaAtt" class="text-danger"></span>
            </div>
            <div class="form-group  p-2">
                <label asp-for="DonoRepositorio" class="control-label"></label>
                <input asp-for="DonoRepositorio" class="form-control" />
                <span asp-validation-for="DonoRepositorio" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center p-4">
                <input type="submit" value="Adicionar" class="btn btn-primary col-8" />
            </div>
        </form>
        <div class="form-group d-flex justify-content-center ">
            <a asp-action="Index">Voltar para a lista</a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
